<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <session-config>
        <session-timeout>60</session-timeout>
        <cookie-config>
            <max-age>3600</max-age>
        </cookie-config>
    </session-config>

    <!--  解决跨域-start  -->
    <filter>
        <filter-name>CORS</filter-name>
        <filter-class>com.thetransactioncompany.cors.CORSFilter</filter-class>
        <init-param>
            <param-name>cors.allowOrigin</param-name>
            <param-value>*</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>BaseFilter</filter-name>
        <filter-class>com.bookcity.filter.BaseFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>BaseFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>CORS</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--  解决跨域-end  -->

    <filter>
        <filter-name>TokenFilter</filter-name>
        <filter-class>com.bookcity.filter.TokenFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TokenFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.bookcity.servlet.user.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/user/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.bookcity.servlet.user.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/user/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>uploadAvatar</servlet-name>
        <servlet-class>com.bookcity.servlet.user.UploadAvatar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>uploadAvatar</servlet-name>
        <url-pattern>/user/uploadAvatar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>changeUserInfo</servlet-name>
        <servlet-class>com.bookcity.servlet.user.ChangeInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>changeUserInfo</servlet-name>
        <url-pattern>/user/change</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.bookcity.servlet.user.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/user/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>closeUser</servlet-name>
        <servlet-class>com.bookcity.servlet.user.Close</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>closeUser</servlet-name>
        <url-pattern>/user/close</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>autoLogin</servlet-name>
        <servlet-class>com.bookcity.servlet.user.AutoLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>autoLogin</servlet-name>
        <url-pattern>/user/autologin</url-pattern>
    </servlet-mapping>
</web-app>